include ../../data/contacts-data.pug
  section.promo
    .promo__wrapper.container.d-flex
      .promo__img-continer
        img.promo__img.not-use(src="../../../../assets/promo.png", alt="promo")
      .promo__text
        h1.promo__title Разработка мобильных приложений и игр
        p.promo__description Разрабатываем продукты, которые используют миллионы
        a(href="#projects").promo__view.d-inline-block.no-underline Смотреть
        ul.promo__socials.d-flex.h-end
          each item in contactsList
            li.promo__social-item
              a.promo__social-link(href=item.href)
                img.promo__social-icon(src=item.icon, alt=item.text)
    img.promo__bg-img1.non-select(src="../../../../assets/bg-img1.png", alt="bg-img")
    img.promo__bg-img2.non-select(src="../../../../assets/bg-img1.png", alt="bg-img")
    img.promo__bg-img3.non-select(src="../../../../assets/bg-img2.png", alt="bg-img")
    img.promo__bg-img4.non-select(src="../../../../assets/bg-img2.png", alt="bg-img")
    img.promo__bg-img5.non-select(src="../../../../assets/bg-img2.png", alt="bg-img")


        